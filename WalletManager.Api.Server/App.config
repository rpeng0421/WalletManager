<?xml version="1.0" encoding="utf-8"?>

<configuration>
    <configSections>
        <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <connectionStrings>
        <add name="WalletManager" providerName="WalletManager"
             connectionString="Data Source=localhost;database=WalletManager;Integrated Security=True" />
    </connectionStrings>
    <appSettings>
        <add key="redisConnStr" value="localhost:6379" />
        <add key="RabbitMqUri" value="127.0.0.1:5672" />
        <add key="RmqExpiration" value="10000" />
        <add key="MongoConnStr" value="mongodb://localhost:27017" />
    </appSettings>
    <nlog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
          xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd" autoReload="true"
          throwExceptions="false" internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

        <targets>
            <default-wrapper xsi:type="AsyncWrapper" queueLimit="10000" timeToSleepBetweenBatches="100"
                             batchSize="1000" overflowAction="Grow" />

            <target xsi:type="File" name="file" encoding="utf-8"
                    layout="${date:universalTime=true:format=yyyy-MM-dd HH\:mm\:ss.fff} ${uppercase:${level}} ${logger} ${message} ${exception:format=tostring}"
                    fileName="D:\LogFiles\WalletManager.Api.Server\WalletManager.Api.Server.log"
                    archiveFileName="D:\LogFiles\WalletManager.Api.Server\WalletManager.Api.Server.{#}.log"
                    archiveNumbering="Date" archiveEvery="Hour" archiveDateFormat="yyyyMMdd-HH" maxArchiveFiles="24" />
        </targets>

        <rules>
            <logger name="WalletManager.Api.Server" minlevel="Trace" writeTo="file" />
        </rules>
    </nlog>
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <dependentAssembly>
                <assemblyIdentity name="System.Memory" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
